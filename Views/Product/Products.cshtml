@model IEnumerable<MVCProject.Models.Product>

@{
    ViewData["Title"] = "Products";
}
<div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-4">Our Products</h1>
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary btn-sm" style="height:40px">Create new one product</a>
</div>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" class="card-img-top" alt="@item.Name" style="height:200px; object-fit:cover;" />
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                    <p class="card-text"><strong>Status:</strong> @item.Status</p>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Details</a>
                </div>
            </div>
        </div>
    }
</div>

